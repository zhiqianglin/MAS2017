<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_bill"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.qianlyu.payyay.AddBillActivity"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/app_bar_background"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout android:id="@+id/search_friend_layout_inner"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/bar_layout">

        <com.android.ex.chips.RecipientEditTextView
            android:id="@+id/search_for_friend"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="@string/chips_enter_email_address"
            android:minHeight="58dp" />

        <!--<EditText-->
            <!--android:id="@+id/search_for_friend"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_weight="1"-->
            <!--android:hint="@string/search_add_friend"-->
            <!--android:layout_marginRight="10dp"/>-->

        <ImageButton
            android:id="@+id/search_for_friend_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:src="@drawable/ic_search_black_36dp"
            android:layout_toRightOf="@id/search_for_friend"
            android:visibility="gone"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_class_black_48dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/search_friend_layout_inner"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_friend_layout_inner"
        android:layout_toRightOf="@id/category"
        android:hint="@string/bill_description"/>

    <LinearLayout android:id="@+id/bill_amount_layout_inner"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/description"
        android:layout_toRightOf="@id/category"
        android:layout_marginLeft="10dp">

        <ImageButton
            android:id="@+id/current_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:src="@drawable/ic_attach_money_black_36dp"/>

        <EditText
            android:id="@+id/bill_amount"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textSize="40sp"
            android:inputType="numberDecimal"
            android:hint="@string/bill_amount"/>

    </LinearLayout>



    <TextView
        android:id="@+id/bill_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="output"
        android:visibility="gone"/>



    <TextView
        android:id="@+id/split_method_words"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bill_amount_layout_inner"
        android:textSize="16sp"
        android:text="Paid by you and split with "/>

        <Button
            android:id="@+id/split_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/split_method_words"
            android:text="Split Method"/>

        <Button
            android:id="@+id/save_bill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="save"/>

    </RelativeLayout>



</LinearLayout>
